    </div>
    
    <div class="user col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
      <p>
        <!--<% if @user.image? %>-->
            <!--<% thum = @user.image.thumb ? @user.image.thumb : "/images/logo.png" %>-->
              
            <%= image_tag @user.image.thumb, :class => "thum" %>
              
        <!--<% else %>-->
          <!--<img class="media-object img-circle img-responsive" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">-->
        <!--<% end %>-->
      </p>
      <div class="user_profile">
        <h4><%= @user.name %></h4>
        <h5 class="profile">
          <%= @user.profile %>
        </h5>
        <% if current_page?(current_user) %>
          <%= link_to "変更", edit_user_path(@user), class:"btn btn-primary" %>
        <% else %>
          <%= render "relationships/follow_button", user: @user %>
        <% end %>
      </div>
    </div>
      
    <div class="groups col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-3 col-xs-offset-1">
      <a href="#"><img src="/images/groups.png" width="75%" height="75%"><br>Groups</a>
    </div>
