<div class="user_show">
  <div class="text-center">
    <div class="user">
      <p>
        <% if @user.image? %>
          <div class="thumbnail">
            <%= image_tag @user.image.url %>
          </div>
        <% else %>
          <img class="media-object img-circle img-responsive" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
        <% end %>
      </p>
      <div class="user_profile">
        <h4><%= @user.name %></h4>
        <h5 class="profile">
          <%= @user.profile %>
        </h5>
        <% if current_page?(current_user) %>
          <%= link_to "変更", edit_user_path(@user), class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
      
    
    <div class="followings">
      <a href="#"><img src="/images/followings.png" width="15%" height="15%"><br>Followings</a>
    </div>
    <div class="followers">
      <a href="#"><img src="/images/followers.png" width="15%" height="15%"><br>Followers</a>
    </div>
    <div class="favorites">
      <a href="#"><img src="/images/favorites.png" width="15%" height="15%"><br>Favorites</a>
    </div>
    <div class="groups">
      <a href="#"><img src="/images/groups.png" width="15%" height="15%"><br>Groups</a>
    </div>
  </div>
</div>





<h3>Works</h3>
<%= render "works/works", works: @works %>


<div class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Works <span class="badge"><%= @count_works %></span><% end %></div>

