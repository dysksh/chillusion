<div class="text-center">
  <div class="row">
    <div class="followings col-lg-2 col-lg-offset-3 col-md-2 col-md-offset-3 col-sm-2 col-sm-offset-3 col-xs-3 col-xs-offset-2">
      <%= link_to followings_user_path(@user) do %>
      <img src="/images/followings.png" width="75%" height="75%"><br>Followings <span class="badge"><%= @count_followings %></span>
      <% end %>
    </div>
    
    <div class="followers col-lg-2 col-lg-offset-2 col-md-2 col-md-offset-2 col-sm-2 col-sm-offset-2 col-xs-3 col-xs-offset-2">
      <%= link_to followers_user_path(@user) do %>
      <img src="/images/followers.png" width="75%" height="75%"><br>Followers <span class="badge"><%= @count_followers %></span>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="favorites col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-3 col-xs-offset-1">
      <%= link_to favorite_works_user_path(@user) do %>
      <img src="/images/favorites.png" width="75%" height="75%"><br>Favorites <span class="badge"><%= @count_favorite_works %></span>
      <% end %>
    </div>
    
    <div class="user col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4">
      <p>
        <% if @user.image? %>
            <% thum = @user.image.thumb ? @user.image.thumb : "/images/logo.png" %>
            
              <%= image_tag @user.image.thumb, :class => "thum" %>
              
        <% else %>
          <img class="media-object img-circle img-responsive" src="<%= gravatar_url(@user, { size: 360 }) %>" alt="">
        <% end %>
      </p>
      
    </div>
      
    <div class="groups col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-3">
      <a href="#"><img src="/images/groups.png" width="75%" height="75%"><br>Groups</a>
    </div>
    <div class="user_profile col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
      <h4><%= @user.name %></h4>
      <h5 class="profile">
        <%= @user.profile %>
      </h5>
      <% if current_page?(current_user) %>
        <%= link_to "変更", edit_user_path(@user), class:"btn btn-primary" %>
      <% else %>
        <%= render "relationships/follow_button", user: @user %>
      <% end %>
    </div>
    <!--</div>-->
  </div>
</div>

  





<h3>Works<span class="badge"><%= @count_works %></span></h3>
<% if @works.present? %>
  <%= render "works/works", works: @works %>
<% else %>
  <h3>作品がまだ投稿されていません</h3>
<% end %>


<div class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Works <span class="badge"><%= @count_works %></span><% end %></div>
<div class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>Followings <span class="badge"><%= @count_followings %></span><% end %></div>
<div class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>Followers <span class="badge"><%= @count_followers %></span><% end %></div>
<div class="<%= 'active' if current_page?(favorite_works_user_path(@user)) %>"><%= link_to favorite_works_user_path(@user) do %>Favorites <span class="badge"><%= @count_favorite_works %></span><% end %></div>
    
