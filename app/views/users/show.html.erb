      <img src="/images/followers.png" width="75%" height="75%"><br>Followers <span class="badge"><%= @count_followers %></span>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="favorites col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-3">
