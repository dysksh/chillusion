<ul class="media-list">
  <% works.each do |work| %>
    <% user = work.user %>
    <!--<div class="row">-->
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <li class="media">
          <div class="center jumbotron">
            <div class="media-left thum-media-left">
              <%= link_to user_path(user) do %>
                  <% if user.image? %>
                    <!--<div class="thumbnail">-->
                      <%= image_tag user.image.thumb, :class => "thum-media-profile" %>
                    <!--</div>-->
                  <% else %>
                    <img class="media-object img-circle" src="<%= gravatar_url(user, { size: 300 }) %>" alt="">
                  <% end %>
                <%= user.name %>
              <% end %>
            </div>
            <div class="media-body">
              <%= link_to work_path(work) do %>
              <!--<div>-->
              <!--  <%= work.work_path %>-->
              <!--</div>-->
              <p>
                <% if work.image? %>
                  <div class="thumbnail">
                    <%= image_tag work.image.thumb %>
                  </div>
                <% end %>
              </p>
              <div>
                <p><%= work.title %></p>
              </div>
              <!--<div class="caption">-->
              <!--  <%=work.caption %>-->
              <!--</div>-->
              <% end %>
              <div>
                <% if work.present? %>
                  <% if current_user == work.user %>
                    <%= link_to "削除", work, method: :delete, data: { confirm: "本当によろしいですか?" }, class: "btn btn-danger" %>
                  <% else %>
                    <%= render "relationships/follow_button", user: user %>
                  <% end %>
                  <br>
                  <%= render "favorites/favorite_button", work: work %>
                <% else %>
                  <%= render "relationships/follow_button", user: user %>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      </div>
    <!--</div>-->
  <% end %>
  <%= paginate works %>
</ul>

