<div class="text-center">
  <h2>Log in</h2>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <!--<%= f.label :email, "Email" %>-->
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <!--<%= f.label :password, "Password" %>-->
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    <% end %>
    
    <p>アカウントをお持ちですか? <%= link_to "登録する", signup_path %></p>
  </div>
</div>